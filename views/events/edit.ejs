<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit an event</h1>
  <div class="col-6 offset-3">
    <form action="/events/<%=event._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Event title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="event[title]"
          value="<%=event.title%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="event[location]"
          value="<%=event.location%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="event[image]"
          value="<%=event.image%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="event[description]"
        >
<%=event.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Ticket price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="event[ticketPrice]"
            value="<%=event.ticketPrice%>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">Date</label>
        <input
          class="form-control"
          type="date"
          id="date"
          name="event[date]"
          value="<%=event.date%>"
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update event</button>
      </div>
      <div class="mb-4">
        <a href="/events/<%= event._id%>">Back to events</a>
      </div>
    </form>
  </div>
</div>

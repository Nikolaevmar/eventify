<% layout('layouts/boilerplate') %>
<div class="container">
<div class="row">
  <h1 class="text-center">Edit an event</h1>
  <div class="col-6 offset-3">
    <form
      action="/events/<%=event._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form" enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Event title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="event[title]"
          required
          value="<%=event.title%>"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="event[location]"
          required
          value="<%=event.location%>"
placeholder="ex: Sofia, Bulgaria"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="input-group mb-3">
  <input type="file" class="form-control" id="image" name="image" multiple>
  <label class="input-group-text" for="image">Upload</label>
</div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="event[description]"
          required
        >
<%=event.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Ticket price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="event[ticketPrice]"
            required
            value="<%=event.ticketPrice%>"
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="date">Date</label>
        <input
          class="form-control"
          type="date"
          id="date"
          name="event[date]"
          required
          value="<%=event.date%>"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <% event.images.forEach((img, i) => { %>
       <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
       <div class="form-check-inline">
         <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
       </div>
       <label for="image-<%=i%>">Delete</label>
        <% })  %> 
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update event</button>
      </div>
      <div class="mb-4">
        <a href="/events/<%= event._id%>">Back to events</a>
      </div>
    </form>
  </div>
</div>
</div>

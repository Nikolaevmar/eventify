<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<% for(let event of events) {%>
<div class="container mt-5">
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
        <% if(event.images.length) {%> 
      <img class="img-fluid" src="<%=event.images[0].url%>" alt="" />
      <% }else { %> 
       <img class="img-fluid" src="https://images.unsplash.com/photo-1506521781263-d8422e82f27a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="" />
     <%  }%> 
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= event.location %></small>
        </p>
        <p class="card-text">
          <small class="text-muted"><%= event.date %></small>
        </p>
        <a class="btn btn-primary" href="/events/<%=event._id%>"
          >View <%=event.title %></a
        >
      </div>
    </div>
  </div>
</div>
</div>
<% }%>

<script>
const events = {features: <%- JSON.stringify(events)%>}
</script>

<script src="/javascript/clusterMap.js"></script>
<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= event.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%=event.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= event.location%></li>
        <li class="list-group-item">
          Submitted by <%= event.author.username%>
        </li>
        <li class="list-group-item">Ticket price: $<%=event.ticketPrice%></li>
        <li class="list-group-item">Date: <%= event.date%></li>
      </ul>
      <% if(currentUser && event.author.equals(currentUser._id)) {%> 
      <div class="card-body">
        <a class="card-link btn btn-info" href="/events/<%=event._id%>/edit">Edit</a>
        <form
          class="d-inline" action="/events/<%=event._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %> 
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) {%> 
      <h2>Leave a review</h2>
    <form
      action="/events/<%=event._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rate the event</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id=""
          cols="10"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> 
    <% for( let review of event.reviews ) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        
        <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username%></h6>
        <p class="card-text">Review: <%= review.body %></p>
         <% if(currentUser && review.author.equals(currentUser._id)) {%> 
        <form
          action="/events/<%=event._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %> 
      </div>
    </div>
    <% } %>
  </div>
</div>
